<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F6"
    tools:context=".timeavailability">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:gravity="center"
                android:text="When do you have time for love? "
                android:textColor="#5947a6"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Select your availability for a Virtual Date"
                android:textColor="#5947a6"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:text="Prefered days:"
                android:textColor="#5947a6"
                android:textSize="22sp" />
            <LinearLayout
                android:id="@+id/daysAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/preferences_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:singleSelection="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_mon"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="246dp"
                        android:layout_marginRight="246dp"
                        android:layout_marginBottom="5dp"
                        android:text="Mon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_tue"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="140dp"
                        android:layout_marginRight="140dp"
                        android:layout_marginBottom="5dp"
                        android:text="Tue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wed"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="47dp"
                        android:layout_marginRight="47dp"
                        android:layout_marginBottom="5dp"
                        android:text="Wed" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_thu"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="47dp"
                        android:layout_marginRight="47dp"
                        android:layout_marginBottom="5dp"
                        android:text="Thu" />

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/daysAvailable2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daysAvailable"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/preferences_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:singleSelection="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Fri"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="246dp"
                        android:layout_marginRight="246dp"
                        android:layout_marginBottom="5dp"
                        android:text="Fri" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Sat"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="140dp"
                        android:layout_marginRight="140dp"
                        android:layout_marginBottom="5dp"
                        android:text="Sat" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Sun"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="47dp"
                        android:layout_marginRight="47dp"
                        android:layout_marginBottom="5dp"
                        android:text="Sun" />

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/timeavail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daysAvailable2"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="From:"
                    android:textColor="#5947a6"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.053"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.56" />

                <TimePicker
                    android:id="@+id/tp"
                    android:layout_width="260dp"
                    android:layout_height="120dp"
                    android:amPmBackgroundColor="#500126"
                    android:headerBackground="#565466"
                    android:numbersBackgroundColor="#57e326"
                    android:numbersSelectorColor="#675543"
                    android:numbersTextColor="#995394"
                    android:textColorPrimary="#359875"
                    android:textColorSecondary="#897530"
                    android:timePickerMode="spinner" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/slideLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeavail"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="left"
                    android:text="To:"
                    android:textColor="#5947a6"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.053"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.56" />

                <TimePicker
                    android:id="@+id/tp2"
                    android:layout_width="260dp"
                    android:layout_height="120dp"
                    android:amPmBackgroundColor="#500126"
                    android:headerBackground="#565466"
                    android:numbersBackgroundColor="#57e326"
                    android:numbersSelectorColor="#675543"
                    android:numbersTextColor="#995394"
                    android:textColorPrimary="#359875"
                    android:textColorSecondary="#897530"
                    android:timePickerMode="spinner" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonNext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/slideLayout"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:textSize="20sp"
                    app:cornerRadius="24dp"
                    android:layout_gravity="start"
                    android:layout_below="@+id/locationLayout"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:onClick="tagsScreen"
                    android:text="Next"
                    android:layout_marginBottom="45dp"
                    />


            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        app:liftOnScroll="true"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/createtoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                >

            </TextView>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


</RelativeLayout>
